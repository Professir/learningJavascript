{
    "manifest_version": 3,
    "name": "Color Picker",
    "description": "A simple color picker extension. Easily pick any color of the screen, view the chosen color, and copy.",
    "version": "1.0",
    "action": {
        "default_popup": "public/index.html"
    },
    "icons": {
        "16": "public/icons/icon16.png",
        "32": "public/icons/icon32.png",
        "48": "public/icons/icon48.png",
        "128": "public/icons/icon128.png"
    }
}